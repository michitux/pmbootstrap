pkgname=brcm-patchram-plus
pkgver=4.1.1_git20170214
pkgrel=0
_commit="94fb127e614b19a9a95561b8c1a0716e2e1e6293"
pkgdesc="Broadcom utility to flash Bluetooth firmwares, extended with per-device Low Power Mode configuration."
url="https://github.com/AsteroidOS/brcm-patchram-plus/"
arch="all"
license="Apache-2.0"
depends=""
makedepends="autoconf automake libtool"
install=""
source="$pkgname-$pkgver.tar.gz::https://github.com/AsteroidOS/brcm-patchram-plus/archive/$_commit.tar.gz sleep.patch"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cd "$builddir"
	./autogen.sh
	./configure \
		--prefix=/usr
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

